# Environment variables for Docker deployment
# Copy this file to .env and fill in the values

# ===== APPLICATION SETTINGS =====
NODE_ENV=production
PORT=3000

# ===== DATABASE =====
MONGODB_URI=mongodb://mongo:27017/llm-crafter

# ===== SECURITY =====
JWT_SECRET=your-very-secure-jwt-secret-here
SESSION_SECRET=your-session-secret-for-oauth-here
ENCRYPTION_KEY=your-32-character-encryption-key!!

# ===== OAUTH CONFIGURATION =====
# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3000

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/auth/google/callback

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:8000/auth/github/callback

# Domain restrictions (optional - comma-separated list)
# If set, only users with emails from these domains can register/login
# ALLOWED_EMAIL_DOMAINS=company.com,trusted-partner.com

# Authentication methods (comma-separated)
# Options: emailpassword, oauth
# Default: emailpassword,oauth (both enabled)
# Examples:
#   AUTH_METHODS=emailpassword,oauth  # Both email/password and OAuth
#   AUTH_METHODS=oauth                # OAuth only
#   AUTH_METHODS=emailpassword       # Email/password only
AUTH_METHODS=emailpassword,oauth

# ===== API KEY SYSTEM CONFIGURATION =====
MAX_API_KEYS_PER_USER=10
MAX_SESSIONS_PER_AGENT=5
API_KEY_LENGTH=32
API_KEY_DEFAULT_EXPIRATION_DAYS=365
SESSION_TOKEN_DEFAULT_EXPIRATION_SECONDS=3600
SESSION_MAX_INTERACTIONS_DEFAULT=100
ENFORCE_SESSION_IP_CONSISTENCY=false
ENABLE_IP_RESTRICTIONS=true
ENABLE_DOMAIN_RESTRICTIONS=true

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ===== OPENAI CONFIGURATION (Optional) =====
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_ORG_ID=your-openai-org-id-here

# ===== LOGGING =====
LOG_LEVEL=info
